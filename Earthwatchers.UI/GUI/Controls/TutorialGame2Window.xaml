            <DoubleAnimation BeginTime="0:0:7.5" Duration="0:0:0.5" To="1" Storyboard.TargetName="epigrage42" Storyboard.TargetProperty="Opacity" />

            <DoubleAnimation BeginTime="0:0:9" Duration="0:0:0.5" To="1" Storyboard.TargetName="Image43" Storyboard.TargetProperty="Opacity" />
            <DoubleAnimation BeginTime="0:0:9.5" Duration="0:0:0.5" To="1" Storyboard.TargetName="epigrage43" Storyboard.TargetProperty="Opacity" />
            <DoubleAnimation BeginTime="0:0:10.5" Duration="0:0:0.5" To="0.7" Storyboard.TargetName="Arrow42" Storyboard.TargetProperty="Opacity" />
            <DoubleAnimation BeginTime="0:0:11" Duration="0:0:0.5" To="1" Storyboard.TargetName="Image44" Storyboard.TargetProperty="Opacity" />
            <DoubleAnimation BeginTime="0:0:11.5" Duration="0:0:0.5" To="1" Storyboard.TargetName="epigrage44" Storyboard.TargetProperty="Opacity" />
        </Storyboard>
        <Storyboard x:Name="Step2Storyboard">
            <DoubleAnimation BeginTime="0:0:0" Duration="0:0:0.5" To="0" Storyboard.TargetName="Step1" Storyboard.TargetProperty="Opacity" />
            <DoubleAnimation BeginTime="0:0:0" Duration="0:0:0.5" To="1" Storyboard.TargetName="readyText" Storyboard.TargetProperty="Opacity" />

            <DoubleAnimation BeginTime="0:0:0.5" Duration="0:0:0.5" To="1" Storyboard.TargetName="cdborder" Storyboard.TargetProperty="Opacity" />
            <DoubleAnimationUsingKeyFrames BeginTime="0:0:1" Storyboard.TargetName="cd3" Storyboard.TargetProperty="Opacity">
