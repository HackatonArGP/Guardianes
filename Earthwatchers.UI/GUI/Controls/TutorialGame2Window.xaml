                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Name="Step3Storyboard">
            <DoubleAnimation BeginTime="0:0:0" Duration="0:0:0.5" To="0" Storyboard.TargetName="Step2" Storyboard.TargetProperty="Opacity" />
            <DoubleAnimation BeginTime="0:0:0" Duration="0:0:0.5" To="1" Storyboard.TargetName="Step3" Storyboard.TargetProperty="Opacity" />
            <DoubleAnimation BeginTime="0:0:0" Duration="0:0:0.5" To="1" Storyboard.TargetName="clock" Storyboard.TargetProperty="Opacity" />
        </Storyboard>
        <Storyboard x:Name="Step4Storyboard">
            <DoubleAnimation BeginTime="0:0:0" Duration="0:0:0.5" To="0" Storyboard.TargetName="Step3" Storyboard.TargetProperty="Opacity" />
            <DoubleAnimation BeginTime="0:0:0" Duration="0:0:0.5" To="1" Storyboard.TargetName="Step4" Storyboard.TargetProperty="Opacity" />
        </Storyboard>
        <Storyboard x:Name="TimeBonusStoryboard">
            <DoubleAnimation BeginTime="0:0:0" Duration="0:0:0.5" To="1" Storyboard.TargetName="AddBonus" Storyboard.TargetProperty="Opacity" />
            
            <DoubleAnimationUsingKeyFrames BeginTime="0:0:0" Storyboard.TargetName="TimeBonusText" Storyboard.TargetProperty="Opacity">
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1" />
                <EasingDoubleKeyFrame KeyTime="0:0:1.5" Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimation BeginTime="0:0:1" Duration="0:0:0.5" To="0" Storyboard.TargetName="TimeBonusText" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation BeginTime="0:0:1" Duration="0:0:0.5" To="0" Storyboard.TargetName="TimeBonusText" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation BeginTime="0:0:1" Duration="0:0:0.5" To="1" Storyboard.TargetName="TimeBonusPoints" Storyboard.TargetProperty="Opacity" />
            
            <DoubleAnimation BeginTime="0:0:1" Duration="0:0:0.5" To="1" Storyboard.TargetName="TimeBonusPoints" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation BeginTime="0:0:1" Duration="0:0:0.5" To="1" Storyboard.TargetName="TimeBonusPoints" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            
