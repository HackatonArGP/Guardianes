            <DoubleAnimation BeginTime="0:0:0" Duration="0:0:0.5" To="1" Storyboard.TargetName="Step0" Storyboard.TargetProperty="Opacity" />
        </Storyboard>
        <Storyboard x:Name="Step1Storyboard">
            <DoubleAnimation BeginTime="0:0:0" Duration="0:0:0.5" To="0" Storyboard.TargetName="Step0" Storyboard.TargetProperty="Opacity" />
            <DoubleAnimation BeginTime="0:0:0" Duration="0:0:0.5" To="1" Storyboard.TargetName="subtitle4" Storyboard.TargetProperty="Opacity" />
            <DoubleAnimation BeginTime="0:0:4" Duration="0:0:0.5" To="1" Storyboard.TargetName="subtitle4" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation BeginTime="0:0:4" Duration="0:0:0.5" To="1" Storyboard.TargetName="subtitle4" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)">
                <DoubleAnimation.EasingFunction>
                    <CircleEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation BeginTime="0:0:5" Duration="0:0:0.5" To="1" Storyboard.TargetName="Image41" Storyboard.TargetProperty="Opacity" />
            <DoubleAnimation BeginTime="0:0:5.5" Duration="0:0:0.5" To="1" Storyboard.TargetName="epigrage41" Storyboard.TargetProperty="Opacity" />
            <DoubleAnimation BeginTime="0:0:6.5" Duration="0:0:0.5" To="0.7" Storyboard.TargetName="Arrow41" Storyboard.TargetProperty="Opacity" />
