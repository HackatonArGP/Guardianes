<controls:ChildWindow x:Class="Earthwatchers.UI.GUI.Controls.WarningScreen"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" 
           Width="300" Height="200" 
           Title="Warning">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer>
            <TextBlock x:Name="txtWarning" Foreground="Black" TextWrapping="Wrap"/>
        </ScrollViewer>
        <Button x:Name="btnClose" Content="Close" Click="BtnCloseClick" Width="75" Height="24" HorizontalAlignment="Right" Grid.Row="1" />
    </Grid>
</controls:ChildWindow>