<phone:PhoneApplicationPage 
    x:Class="Earthwatchers.WindowsPhone.MapPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d" d:DesignHeight="768" d:DesignWidth="480"
    shell:SystemTray.IsVisible="True" LayoutUpdated="PhoneApplicationPage_LayoutUpdated" xmlns:my="clr-namespace:Microsoft.Phone.Controls.Maps;assembly=Microsoft.Phone.Controls.Maps">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,17,0,28">
            <TextBlock x:Name="ApplicationTitle" Text="DEFORESTACTION" Style="{StaticResource PhoneTextNormalStyle}"/>
            <TextBlock x:Name="PageTitle" Text="MY LAND" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}"/>
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">
            <my:Map Height="601" HorizontalAlignment="Left" Margin="-7,0,0,0" Name="map1" VerticalAlignment="Top" Width="475" CredentialsProvider="AnnwWO-5Cqkguwy4MXYD1t9p_GQyh8RBQO_3MAYoRDLdreDVg4klwv2Yv4afPLOk" LogoVisibility="Collapsed" ZoomBarVisibility="Visible" CopyrightVisibility="Collapsed" ZoomLevel="15" Mode="Microsoft.Phone.Controls.Maps.AerialMode">
                <my:MapLayer x:Name="PolygonLayer">
                    <my:MapPolygon x:Name="mapPolygon" StrokeThickness="10" Stroke="#FF0A0A0A" BorderThickness="0" Fill="White" Opacity="0.5" IsHitTestVisible="True" MouseLeftButtonUp="mapPolygon_MouseLeftButtonUp" />
                </my:MapLayer>
            </my:Map>
        </Grid>
    </Grid>
 
