<UserControl x:Class="EarthWatchers.SL.GUI.Controls.DistanceCalculationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Background="Transparent">
    
    <Grid x:Name="LayoutRoot" Background="Transparent" MouseLeftButtonDown="GridMouseLeftButtonDown">
        <Canvas x:Name="drawCanvas"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Border Background="White" Opacity="1" Margin="0" CornerRadius="4" HorizontalAlignment="Center">
                <TextBlock Text="Distance: 0 KM" x:Name="txtDistance" Foreground="Black" FontSize="14" Margin="5" />
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
            	<Button x:Name="btnReset" Content="Reset" Click="BtnReset" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,0,5,0" />
            	<Button x:Name="btnStop" Content="Stop" Click="BtnStop" VerticalAlignment="Top" HorizontalAlignment="Center" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
