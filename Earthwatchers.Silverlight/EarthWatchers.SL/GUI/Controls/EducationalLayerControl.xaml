<UserControl x:Class="EarthWatchers.SL.GUI.Controls.EducationalLayerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="20" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White">        
        <Rectangle Fill="Transparent" Stroke="DarkGray" />
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
            <CheckBox x:Name="xhkAdd" Margin="5,0,0,0" Checked="XhkAddChecked" Unchecked="XhkAddUnchecked"/>
            <TextBlock x:Name="txtName" Text="Deforestation" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Black" Margin="5,0,0,0" Width="200" />            
        </StackPanel>
        <HyperlinkButton x:Name="txtInfo" TargetName="_blank" Content="info" FontSize="12" Height="15" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0" />
    </Grid>
</UserControl>
